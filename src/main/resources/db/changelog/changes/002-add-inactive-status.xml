<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="010-add-inactive-status-support" author="system">
        <!-- Update regional_allocation_status column to support INACTIVE -->
        <modifyDataType 
            tableName="regional_allocation_breakdown"
            columnName="regional_allocation_status"
            newDataType="VARCHAR(16)"/>
        
        <!-- Update allocation_status column to support INACTIVE -->
        <modifyDataType 
            tableName="client_allocation_breakdown"
            columnName="allocation_status"
            newDataType="VARCHAR(16)"/>
        
        <!-- Add check constraints to ensure valid status values -->
        <sql>
            ALTER TABLE regional_allocation_breakdown 
            ADD CONSTRAINT chk_regional_allocation_status 
            CHECK (regional_allocation_status IN ('NEW', 'ACCEPTED', 'INACTIVE'));
        </sql>
        
        <sql>
            ALTER TABLE client_allocation_breakdown 
            ADD CONSTRAINT chk_client_allocation_status 
            CHECK (allocation_status IN ('NEW', 'ACCEPTED', 'INACTIVE'));
        </sql>
    </changeSet>

</databaseChangeLog>
